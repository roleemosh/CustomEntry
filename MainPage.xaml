    xmlns:control="clr-namespace:CustomEntry">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">



            <Label
                FontSize="32"
                HorizontalOptions="Center"
